<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
          minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8"
          fx:controller="uygulama.kontrolculer.KarsilamaKontrolcusu">

    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints maxHeight="20.0" prefHeight="0.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" prefHeight="0.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Button mnemonicParsing="false" onAction="#ElemanGirisi" text="Eleman Girişi" GridPane.halignment="LEFT"
                GridPane.rowIndex="2" GridPane.valignment="CENTER">
            <GridPane.margin>
                <Insets left="10.0"/>
            </GridPane.margin>
        </Button>
        <Button mnemonicParsing="false" onAction="#SirketGirisi" text="Şirket Girişi" GridPane.columnIndex="1"
                GridPane.halignment="LEFT" GridPane.rowIndex="2" GridPane.valignment="CENTER">
            <GridPane.margin>
                <Insets left="25.0"/>
            </GridPane.margin>
        </Button>
        <ListView fx:id="kisiListesi" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
            <GridPane.margin>
                <Insets left="10.0" right="10.0" top="10.0"/>
            </GridPane.margin>
        </ListView>
        <Label alignment="CENTER" text="Kişiler:">
            <GridPane.margin>
                <Insets left="10.0" top="10.0"/>
            </GridPane.margin>
        </Label>
        <ListView fx:id="sirketListesi" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="10.0" right="10.0" top="10.0"/>
            </GridPane.margin>
        </ListView>
        <Label alignment="CENTER" text="Şirketler:" GridPane.columnIndex="1">
            <GridPane.margin>
                <Insets left="10.0" top="10.0"/>
            </GridPane.margin>
        </Label>
        <Button mnemonicParsing="false" onAction="#ElemanKaydi" text="Eleman Kaydı" GridPane.halignment="CENTER"
                GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets left="10.0" right="10.0"/>
            </GridPane.margin>
        </Button>
        <Button mnemonicParsing="false" onAction="#SirketKaydi" text="Şirket Kaydı" GridPane.columnIndex="1"
                GridPane.halignment="RIGHT" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets right="25.0"/>
            </GridPane.margin>
        </Button>
        <Button mnemonicParsing="false" onAction="#elemaniSil" text="Elemanı Sil" GridPane.halignment="RIGHT"
                GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets left="10.0" right="25.0"/>
            </GridPane.margin>
        </Button>
    </children>
</GridPane>
