<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane
        xmlns:fx="http://javafx.com/fxml/1"
        maxHeight="-Infinity"
        maxWidth="-Infinity" minHeight="-Infinity"
        minWidth="-Infinity" prefHeight="400.0"
        prefWidth="600.0"
        xmlns="http://javafx.com/javafx/8"
        fx:controller="uygulama.KarsilamaKontrolcusu">

    <columnConstraints>
        <ColumnConstraints
                hgrow="SOMETIMES"
                minWidth="10.0"
                prefWidth="100.0"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints
                maxHeight="29.0" minHeight="10.0"
                prefHeight="29.0"
                vgrow="SOMETIMES"/>
        <RowConstraints
                minHeight="10.0" prefHeight="30.0"
                vgrow="SOMETIMES"/>
        <RowConstraints
                minHeight="10.0" prefHeight="30.0"
                vgrow="SOMETIMES"/>
        <RowConstraints
                minHeight="10.0" prefHeight="30.0"
                vgrow="SOMETIMES"/>
    </rowConstraints>

    <children>
        <MenuBar>
            <menus>
                <Menu mnemonicParsing="false"
                      text="Dosya">
                    <items>
                        <MenuItem
                                mnemonicParsing="false"
                                text="Kapat"
                                onAction="#programiKapat"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false"
                      text="Yardım">
                    <items>
                        <MenuItem
                                mnemonicParsing="false"
                                text="Hakkında"
                                onAction="#hakkindaBilgisiGoster"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </children>
</GridPane>
